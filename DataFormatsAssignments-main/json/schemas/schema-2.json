{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/json/schema-2",
    "title": "Actors and countries hierarchy",
    "type": "object",
    "additionalProperties": false,

    "properties": {
        "@context": {
            "type": ["object", "string"]
        },
        "countries": {
            "type": "array", 
            "items": {"$ref": "#/definitions/Country"}, 
            "minItems": 3
        },
        "actors": {
            "type": "array", 
            "items": {"$ref": "#/definitions/Actor"}, 
            "minItems": 3
        }
    },

    "required": [
        "countries",
        "actors"
    ],

    "definitions": {
        "LocalizedString": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "value": { "type": "string"},
                "lang": {
                    "type": "string",
                    "pattern": "^[a-zA-Z-]+$"
                }
            },
            "required": ["value"]
        },

        "Country": {
            "type": "object", 
            "additionalProperties": false,
            "properties": {
                "id": { "type": "string"},
                "name": {"$ref": "#/definitions/LocalizedString"},
                "code": {"type": "string"}
            },
            "required": ["id", "name", "code"]
        },

        "Actor": {
            "type": "object",
            "additionalProperties": false, 
            "properties": {
                "id": {"type": "string"}, 
                "fullName": { "$ref": "#/definitions/LocalizedString"},
                "birthDate": {"type": "string", "format": "date"},

                "stageName": {"$ref": "#/definitions/LocalizedString"},
                "debutYear": {"type": "integer"},

                "bornIn": {"type":"string"}

            },
            "required": ["id", "stageName", "debutYear", "fullName", "birthDate"]
        }
    }
}