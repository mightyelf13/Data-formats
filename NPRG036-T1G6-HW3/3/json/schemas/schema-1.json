{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/json/schema-1",
    "title": "Movie database hierarchy",
    "type": "object",
    "additionalProperties": false,

    "properties": {
        "@context": {
            "type": ["object", "string"]
        },
        
        "@graph": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "$ref": "#/definitions/Country" },
                    { "$ref": "#/definitions/Studio" },
                    { "$ref": "#/definitions/Cinema" },
                    { "$ref": "#/definitions/Person" },
                    { "$ref": "#/definitions/Movie" },
                    { "$ref": "#/definitions/Screening" }
                ]
            }   
        }
    },

    "required": [
        "@graph"
    ],

    "definitions": {
        "LocalizedString": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z-]+$": { "type": "string" }
            },
            "additionalProperties": false
        },

        "Country": {
            "type": "object", 
            "additionalProperties": false,
            "properties": {
                "id": { "type": "string"},
                "type": {
                    "type": "string",
                    "enum": ["Country"]
                },
                "label": {"$ref": "#/definitions/LocalizedString"},
                "isoCode": {"type": "string"}
            },
            "required": ["id", "type", "label", "isoCode"]
        },
        
        "Studio": {
            "type": "object",
            "additionalProperties": false, 
            "properties": {
                "id": {"type": "string"}, 
                "type": {
                    "type": "string",
                    "enum": ["Studio"]
                },
                "name": { "$ref": "#/definitions/LocalizedString"},
                "foundedYear": {"type": "integer"},
                "moviesProduced": {"type": "integer", "minimum": 0},
                "basedIn": {"type": "string"}
            },
            "required": ["id", "type", "name", "foundedYear", "moviesProduced", "basedIn"]
        },

        "Cinema": {
            "type": "object",
            "additionalProperties": false, 
            "properties": {
                "id": {"type": "string"}, 
                "type": {
                    "type": "string",
                    "enum": ["Cinema"]
                },
                "name": { "$ref": "#/definitions/LocalizedString"},
                "capacity": {"type": "integer", "minimum": 0},
                "isLuxury": {"type": "boolean"},
                "phones": {
                    "type": "array",
                    "items": {"type": "string"}
                },
                "locatedIn": {"type": "string"}
            },
            "required": ["id", "type", "name", "capacity", "isLuxury", "locatedIn"]
        },

        "Person": {
            "type": "object",
            "additionalProperties": false, 
            "properties": {
                "id": {"type": "string"}, 
                "type": {
                    "type" : "string",
                    "enum": ["Director", "Actor"]
                },
                "name": { "$ref": "#/definitions/LocalizedString"},
                "birthDate": {"type": "string", "format": "date"},
                "activeSince": {"type": "integer"},
                "awardsCount": {"type": "integer", "minimum": 0},
                "stageName": {"$ref": "#/definitions/LocalizedString"},
                "debutYear": {"type": "integer"},
                "bornIn": {"type":"string"},
                "actedIn": {
                    "type": "array",
                    "items": {"type": "string"}
                }
            },
            "required": ["id", "type", "name", "birthDate"]
        },

        "Movie": {
            "type": "object",
            "additionalProperties": false, 
            "properties": {
                "id": {"type": "string"},
                "type": {
                    "type": "string",
                    "enum": ["Movie"]
                },
                "title": { "$ref": "#/definitions/LocalizedString"},
                "durationMinutes": { "type": "integer", "minimum": 0},
                "releaseDate": {"type": "string", "format": "date"},
                "directedBy": {"type": "string"},
                "producedBy": {"type": "string"}
            },
            "required": ["id", "type", "title", "durationMinutes", "releaseDate", "directedBy", "producedBy"]
        },

        "Screening": {
            "type": "object",
            "additionalProperties": false, 
            "properties": {
                "id": {"type": "string"}, 
                "type": {
                    "type": "string",
                    "enum": ["Screening"]
                },
                "shows": {"type": "string"},
                "takesPlaceAt": {"type": "string"},
                "screeningDate": { "type": "string", "format": "date"},
                "screeningTime": {"type":"string", "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}$"},
                "language": {"type": "string"}
                
            },
            "required": ["id", "type", "shows", "takesPlaceAt", "screeningDate", "screeningTime", "language"]
        }
    }
}